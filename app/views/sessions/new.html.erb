<div class="login_flash flashes">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :class=>"flash flash_#{name}" %>
  <% end %>
</div>

<%= form_tag sessions_path, :class => "user_new" do %>
  <div class="login_label">Login</div>
  <div class="label_field">
    <%= label_tag :username, nil, :class=>"label_name" %>
    <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="label_field">
    <%= label_tag :password, nil, :class=>"label_name" %>
    <%= password_field_tag :password %>
  </div>
  <p><input class="user_submit" name="commit" type="submit" value="Login"></p>
  <div class="pass_remind"><%= link_to "Forgot your password?", new_password_reset_path %></div>
  <div class="login_footer">
    <small class="left">
      <%= Time.now.utc.strftime("%a %b %d, %Y %I:%M:%S %P %Z") %>
      &nbsp;&nbsp;
    </small>
    <small class="right">
      <a href="http://www.clone-systems.com">www.clone-systems.com</a>
    </small>
  </div>
<% end %>
