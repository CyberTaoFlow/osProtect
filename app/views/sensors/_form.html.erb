<div id="wrapper">
  <div id="content_wrapper">
    <div class="flashes">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :class=>"flash flash_#{name}" %>
      <% end %>
    </div>
    <div id="osprotect_content" class="with_sidebar">
      <div id="main_content_wrapper">
        <div id="main_content">
          <div id="incident">
            <%= form_for(@sensor) do |f| %>
              <% if @sensor.errors.any? %>
                <div id="error_explanation">
                  <h3><%= pluralize(@group.errors.count, "error") %> prohibited this Sensor from being saved:</h3>
                  <ul>
                  <% @sensor.errors.full_messages.each do |msg| %>
                    <li><h3><%= msg %></h3></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <fieldset class="inputs">
                <ol>
                  <li class="name required">
                    <label>Name</label>
                    <%= f.text_field :name %>
                  </li>
                  <li class="buttons commit" style="margin-top:-5px">
                    <label>&nbsp;</label>
                    <%= f.submit "Update" %>
                  </li>
                </ol>
              </fieldset>
            <% end %>
          </div> <!-- incident -->
        </div> <!-- main_content -->
      </div> <!-- main_content_wrapper -->
      <div id="sidebar">
        <div class="sidebar_section panel">
          <h3 style="margin-top:-2px">&larr; Name this detection engine:</h3>
          <div class="panel_contents">
              <ul>
                <li>hostname: <%=@sensor.hostname%></li>
                <li>interface: <%=@sensor.interface%></li>
                <li>filter: <%=@sensor.filter%></li>
                <li>detail: <%=@sensor.detail%></li>
                <li>encoding: <%=@sensor.encoding%></li>
                <li>last cid: <%=@sensor.last_cid%></li>
              </ul>
          </div> <!-- panel_contents -->
        </div> <!-- sidebar_section -->
      </div> <!-- sidebar -->
    </div> <!-- osprotect_content -->
  </div> <!-- content_wrapper -->
</div> <!-- wrapper -->
