<div id="wrapper">
  <div id="content_wrapper">
    <div class="flashes">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :class=>"flash flash_#{name}" %>
      <% end %>
    </div>
    <div id="osprotect_content" class="without_sidebar">
      <div id="main_content_wrapper">
        <div id="main_content">
          <div id="rule">
            <%= form_for(@rule) do |f| %>
              <% if @rule.errors.any? %>
                <div id="error_explanation">
                  <h3><%= pluralize(@rule.errors.count, "error") %> prohibited this Rule from being saved:</h3>
                  <ul>
                  <% @rule.errors.full_messages.each do |msg| %>
                    <li><h3><%= msg %></h3></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <fieldset class="inputs">
                <div style="margin-left:10px">
                  <%= f.text_area :rawtext, style: "font-family:arial;font-weight:bold;font-size:14pt;color:#00008b;" %>
                  <br />
                  <em>note: during editing you may use the Enter key to make the rule more readable, which will be removed when the rule is saved as a rule can only be one line.</em>
                  <br /><br />
                  <%= f.submit %>
                </div>
              </fieldset>
            <% end %>
          </div> <!-- rule -->
        </div> <!-- main_content -->
      </div> <!-- main_content_wrapper -->
    </div> <!-- osprotect_content -->
  </div> <!-- content_wrapper -->
</div> <!-- wrapper -->
